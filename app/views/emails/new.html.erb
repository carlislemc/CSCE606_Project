<h1>Send Custom Email</h1>

<%= form_with url: emails_path, method: :post do %>
  <div>
    <%= label_tag :email, "Recipient Email" %>
    <%= text_field_tag :email, nil, required: true %>
  </div>

  <div>
    <%= label_tag :subject, "Email Subject" %>
    <%= text_field_tag :subject, nil, required: true %>
  </div>

  <div>
    <%= label_tag :message, "Message" %>
    <%= text_field_tag :message, nil, required: true %>
  </div>

  <%= submit_tag "Send Email" %>
<% end %>
<%= link_to "Back to Home", root_path %>
