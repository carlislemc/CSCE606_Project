<h1>Records</h1>
<!-- Display selected table data -->
<% if @table_name.present? %>
  <h2>Showing: <%= @table_name.titleize %></h2>
  <table border="1">
    <thead>
      <tr>
        <% if @records.any? %>
          <% @records.first.attributes.keys.each do |key| %>
            <th><%= key.titleize %></th>
          <% end %>
        <% else %>
          <th>No records found</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @records.each do |record| %>
        <tr>
          <% record.attributes.values.each do |value| %>
            <td><%= value %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
