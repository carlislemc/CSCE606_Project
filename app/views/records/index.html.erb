<h1>Assignments</h1>
<!-- Display selected table data -->
<% if @table_name.present? %>
  <h2><%= @table_name.titleize %></h2>
  <table border:"1">
    <thead>
      <tr>
        <% if @records.any? %>
          <th>Course Number</th>
          <th>Section</th>
          <th>Instructor</th>
          <th>Instructor Email</th>
          <th>Student</th>
          <th>Student Email</th>
          <th>UIN</th>
          <th>Actions</th>
        <% else %>
          <th>No records found</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @records.each do |record| %>
        <tr> 
          <td><%= record.course_number %></td>
          <td><%= record.section %></td>
          <td><%= record.ins_name %></td>
          <td><%= record.ins_email %></td>
          <td><%= record.stu_name %></td>
          <td><%= record.stu_email %></td>
          <td><%= record.uin %></td>
          <td>
          <div class="button-group button-group--cta">
            <%= link_to "Edit", edit_ta_assignment_path(record, file: @table_name, uin: record.uin), method: :get, class: 'btn btn-danger' %>
            <%= button_to "Delete", ta_assignment_path(record, file: @table_name, uin: record.uin, section: record.section,
                 course_number: record.course_number, stu_email: record.stu_email, stu_name: record.stu_name,
                 ins_name: record.ins_name, ins_email: record.ins_email), method: :delete, class: 'btn btn--cta-secondary' %>
          </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

